# Server Configuration
PORT=8080
HOST=0.0.0.0

# GCP Configuration
GCP_PROJECT_ID=your-gcp-project-id

# SendGrid Configuration (set as Cloud Run environment variable)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDER_EMAIL=noreply@yourdomain.com
EMAIL_SUBJECT=Notification

# Alternative: SendGrid API Key from Secret Manager
# SENDGRID_SECRET_NAME=sendgrid-api-key
# SENDGRID_SECRET_VERSION=latest

# Firestore Configuration
FIRESTORE_COLLECTION=config
FIRESTORE_BLOCKED_DOCUMENT=blocked_domains
FIRESTORE_ALLOWED_DOCUMENT=allowed_domains

# BigQuery Audit Logging
BQ_PROJECT_ID=your-gcp-project-id
BQ_DATASET=email_api_logs
BQ_TABLE=audit_log
BQ_AUDIT_ENABLED=true
